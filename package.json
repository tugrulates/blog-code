{
  "name": "www",
  "type": "module",
  "version": "2.0.0",
  "author": "Tugrul Ates",
  "license": "MIT",
  "homepage": "https://github.com/tugrulates/www#readme",
  "bugs": {
    "url": "https://github.com/tugrulates/www/issues"
  },
  "scripts": {
    "clean": "rm -rf dist .astro .vercel src/content/posts src/content/photos public/files",
    "fetch:blog": "git submodule update --init --remote src/blog",
    "fetch:photos": "git submodule update --init --remote src/photos",
    "fetch": "npm run fetch:blog && npm run fetch:photos",
    "dev": "DRAFTS=1 astro dev --host",
    "build:blog": "tsx src/scripts/build-blog.ts",
    "build:photos": "tsx src/scripts/build-photos.ts",
    "build": "npm run fetch && npm run build:blog && npm run build:photos && npm run lint && astro build",
    "lint": "astro check --minimumFailingSeverity=warning && eslint .",
    "format": "prettier -cw .",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "^0.5.6",
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.9",
    "@astrojs/react": "^3.6.2",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.2",
    "@astrojs/vercel": "^7.8.2",
    "@fontsource/fira-code": "^5.1.0",
    "@fontsource/fira-sans": "^5.1.0",
    "@headlessui/react": "^2.2.0",
    "@iconify-json/bi": "^1.2.1",
    "@iconify-json/heroicons": "^1.2.1",
    "@tailwindcss/typography": "^0.5.15",
    "@vercel/analytics": "^1.3.2",
    "@vercel/og": "^0.6.3",
    "@vercel/speed-insights": "^1.0.14",
    "astro": "^4.16.9",
    "astro-icon": "^1.1.1",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "exif": "^0.6.0",
    "exiftool-vendored": "^28.8.0",
    "glob": "^11.0.0",
    "globals": "^15.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.33.5",
    "sharp-ico": "^0.1.5",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/eslint__js": "^8.42.3",
    "@types/exif": "^0.6.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.14.0",
    "eslint-plugin-astro": "^1.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  }
}
