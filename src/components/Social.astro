---
import { Icon } from "astro-icon/components";

const { name, href, icon } = Astro.props;
const external = Boolean(href.startsWith("http"));
---

<a
  aria-label={name}
  class="group"
  href={href}
  rel={external ? "nofollow" : undefined}
>
  <div
    class:list={[
      "justify-left transition-color relative flex h-full flex-col items-center justify-end gap-2 p-2",
      "scale-100 transition-transform hover:scale-110 hover:opacity-100 sm:opacity-75",
    ]}
  >
    <span
      aria-hidden="true"
      class:list={[
        "collapse absolute min-w-24 scale-50 text-center align-text-bottom text-xs font-thin opacity-0 transition-all",
        "group-hover:visible group-hover:-translate-y-10 group-hover:scale-100 group-hover:opacity-100",
        "group-focus:visible group-focus:-translate-y-10 group-focus:scale-100 group-focus:opacity-100",
      ]}
      role="tooltip"
    >
      {name}
    </span>
    <Icon aria-hidden name={icon} size={32} />
  </div>
</a>
