---
import "@fontsource/fira-sans";
import "@fontsource/fira-code";
import { ViewTransitions } from "astro:transitions";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { AUTHOR } from "@/consts";
import { getFavicon } from "@/favicon";

interface Props {
  tab: string;
  title: string;
  description: string;
  keywords?: string[];
  image?: ImageMetadata;
  imageDescription?: string;
}

const { tab, title, description, keywords, image, imageDescription } =
  Astro.props;

const appleTouchIcon = await getFavicon(180);
const favicon = await getFavicon(180);
---

<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link
      rel="icon"
      href={favicon.src}
      type={`image/${favicon.options.format}`}
    />
    <link rel="apple-touch-icon" href={appleTouchIcon.src} />
    <link rel="manifest" href="/manifest.json" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content={AUTHOR.name} />
    <meta name="description" content={description} />
    <meta name="keywords" content={(keywords ?? []).join(", ")} />
    {
      image !== undefined && (
        <>
          <meta property="og:image" content={image.src} />
          <meta property="og:image:width" content={image.width.toString()} />
          <meta property="og:image:height" content={image.height.toString()} />
          <meta property="og:image:type" content={`image/${image.format}`} />
          <meta property="og:image:alt" content={imageDescription} />
          <meta name="twitter:image" content={image.src} />
        </>
      )
    }
    <ViewTransitions />
    <title>{title}</title>
  </head>

  <body
    class="relative mx-auto flex min-h-screen max-w-screen-md flex-col items-center gap-0 bg-stone-300 text-black dark:bg-stone-700 dark:text-white"
  >
    <header class="w-full text-left">
      <Header tab={tab} />
    </header>
    <main
      class="z-10 w-full flex-1 bg-stone-200 p-0 text-left shadow shadow-stone-900/20 dark:bg-stone-800 sm:rounded-b-3xl sm:rounded-t-xl sm:px-4 sm:pb-4"
    >
      <div
        class="absolute left-0 z-20 h-16 w-full bg-stone-200 dark:bg-stone-800 max-sm:hidden sm:top-20 sm:rounded-t-3xl lg:top-28"
      >
      </div>
      <slot />
    </main>
    <footer
      class="flex w-full flex-row justify-center gap-0 text-left"
      transition:persist
    >
      <Footer />
    </footer>
  </body>
</html>
