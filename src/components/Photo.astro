---
import { Image } from "astro:assets";

const { link, image, title, city, state, country, date } = Astro.props;
const formatted_date = date.toLocaleDateString("en-US", {
  month: "long",
  year: "numeric",
});
const formatted_location = `${city}, ${country == "United States" ? state : country}`
---

<a
  href={link}
  class="align-center w-72 group gap-2 flex flex-col ring-inset ring-stone-500/50 transition hover:bg-stone-500/10 hover:ring-1 sm:rounded-xl",
>
  <div class="hidden grow-0 overflow-hidden rounded-2xl shadow shadow-stone-900 transition-all group-hover:scale-[1.15] sm:flex">
    <Image
      src={image}
      alt={title}
      width={256}
      densities={[1, 2, 3, 4]}
      class="transform-all w-full object-cover"
    />
  </div>
  <div class="group z-10 flex grow-0 flex-col p-4">
    <time datetime={date} class="text-stone-500">{formatted_date}</time>
    <p class="grow text-lg font-bold">{title}</p>
    <p class="line-clamp-3 text-stone-600 dark:text-stone-400">
      {formatted_location}
    </p>
  </div>
</a>
