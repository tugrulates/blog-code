---
import { Image } from "astro:assets";

interface Props {
  link: string;
  image: ImageMetadata;
  title: string;
  description: string;
  class?: string;
}
const { link, image, title, description, class: className } = Astro.props;
---

<a
  aria-label={title}
  class:list={[
    "align-center group transition hover:bg-stone-500/10 hover:opacity-100 sm:rounded-xl print:block",
    className,
  ]}
  href={link}
>
  <div
    class:list={[
      "flex aspect-square h-auto overflow-hidden transition-all sm:group-hover:scale-110",
      "bg-stone-200/20 shadow shadow-stone-900 sm:rounded-2xl",
    ]}
  >
    <Image
      alt={description}
      class="transform-all min-w-full object-cover object-center"
      densities={[1, 2, 3, 4]}
      height={230}
      src={image}
      width={230}
    />
  </div>
</a>
