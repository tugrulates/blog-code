{
  "name": "blog",
  "type": "module",
  "version": "2.0.0",
  "author": "Tugrul Ates",
  "license": "MIT",
  "homepage": "https://github.com/tugrulates/blog#readme",
  "bugs": {
    "url": "https://github.com/tugrulates/blog/issues"
  },
  "scripts": {
    "fetch-blog": "git submodule update --init --remote src/blog",
    "fetch-photos": "git submodule update --init --remote src/photos",
    "fetch": "npm run fetch-blog && npm run fetch-photos",
    "build-blog": "tsx src/scripts/build-blog.ts",
    "build-photos": "tsx src/scripts/build-photos.ts",
    "prebuild": "npm run fetch && npm run build-blog && npm run build-photos",
    "lint": "npx eslint .",
    "dev": "DRAFTS=true astro dev",
    "build": "npm run lint && astro check --minimumFailingSeverity=warning && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "tsx": "tsx"
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "^0.4.3",
    "@astrojs/check": "^0.4.1",
    "@astrojs/mdx": "^2.0.5",
    "@astrojs/preact": "^3.1.0",
    "@astrojs/react": "^3.0.9",
    "@astrojs/sitemap": "^3.0.5",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource/fira-code": "^5.0.16",
    "@fontsource/fira-sans": "^5.0.18",
    "@headlessui/react": "^1.7.17",
    "@iconify-json/bi": "^1.1.23",
    "@iconify-json/heroicons": "^1.1.19",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "astro": "^4.2.1",
    "astro-icon": "^1.0.2",
    "astro-remark-description": "^1.1.1",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.0",
    "exif": "^0.6.0",
    "exiftool-vendored": "^23.7.0",
    "glob": "^10.3.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.33.2",
    "sharp-ico": "^0.1.5",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.6.2"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.2.2",
    "@types/exif": "^0.6.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-astro": "^0.31.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.2",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "typescript": "^5.3.3"
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-xml",
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "xmlWhitespaceSensitivity": "ignore"
  }
}
