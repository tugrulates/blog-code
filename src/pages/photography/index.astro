---
import { getCollection } from "astro:content";
import { fade } from "astro:transitions";
import BaseLayout from "@layouts/BaseLayout.astro";
import Photo from "@components/Photo.astro";

const photos = (await getCollection("photos")).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime(),
);
---

<BaseLayout tab="photos" title="Photography" description="My photography.">
  <div
    class="flex flex-row flex-wrap justify-between gap-4"
    transition:animate={fade({ duration: "0.1s" })}
  >
    {
      photos.map((photo) => (
        <Photo
          link={`./photography/${photo.id}`}
          image={photo.data.square}
          description={photo.data.description}
          className="basis-1/4"
        />
      ))
    }
  </div>
</BaseLayout>
