{
  "name": "www",
  "type": "module",
  "version": "2.0.0",
  "author": "Tugrul Ates",
  "license": "MIT",
  "homepage": "https://github.com/tugrulates/www#readme",
  "bugs": {
    "url": "https://github.com/tugrulates/www/issues"
  },
  "scripts": {
    "clean": "rm -rf dist .astro .vercel src/content/posts src/content/photos public/files",
    "fetch:blog": "git submodule update --init --remote src/blog",
    "fetch:photos": "git submodule update --init --remote src/photos",
    "fetch": "npm run fetch:blog && npm run fetch:photos",
    "dev": "DRAFTS=1 astro dev --host",
    "build:blog": "tsx src/scripts/build-blog.ts",
    "build:photos": "tsx src/scripts/build-photos.ts",
    "build": "npm run fetch && npm run build:blog && npm run build:photos && npm run lint && astro build",
    "lint": "astro check --minimumFailingSeverity=warning && eslint .",
    "format": "prettier -cw .",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "^0.5.3",
    "@astrojs/check": "^0.9.3",
    "@astrojs/mdx": "^3.1.6",
    "@astrojs/react": "^3.6.2",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/vercel": "^7.8.1",
    "@fontsource/fira-code": "^5.1.0",
    "@fontsource/fira-sans": "^5.1.0",
    "@headlessui/react": "^2.1.8",
    "@iconify-json/bi": "^1.2.0",
    "@iconify-json/heroicons": "^1.2.0",
    "@tailwindcss/typography": "^0.5.15",
    "@vercel/analytics": "^1.1.3",
    "@vercel/og": "^0.6.2",
    "@vercel/speed-insights": "^1.0.12",
    "astro": "^4.15.6",
    "astro-icon": "^1.1.1",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "exif": "^0.6.0",
    "exiftool-vendored": "^28.2.1",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.33.5",
    "sharp-ico": "^0.1.5",
    "tailwindcss": "^3.4.11",
    "tsx": "^4.19.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/eslint__js": "^8.42.3",
    "@types/exif": "^0.6.5",
    "@types/react": "^18.3.6",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.10.0",
    "eslint-plugin-astro": "^1.2.4",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  }
}
