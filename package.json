{
  "name": "www",
  "type": "module",
  "version": "2.0.0",
  "author": "Tugrul Ates",
  "license": "MIT",
  "homepage": "https://github.com/tugrulates/www#readme",
  "bugs": {
    "url": "https://github.com/tugrulates/www/issues"
  },
  "scripts": {
    "fetch:blog": "git submodule update --init --remote src/blog",
    "fetch:photos": "git submodule update --init --remote src/photos",
    "fetch": "npm run fetch:blog && npm run fetch:photos",
    "dev": "DRAFTS=1 astro dev --host",
    "build:blog": "tsx src/scripts/build-blog.ts",
    "build:photos": "tsx src/scripts/build-photos.ts",
    "build": "npm run fetch && npm run build:blog && npm run build:photos && npm run lint && astro build",
    "lint": "astro check --minimumFailingSeverity=warning && eslint .",
    "format": "prettier -cw .",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "^0.5.2",
    "@astrojs/check": "^0.7.0",
    "@astrojs/mdx": "^3.1.2",
    "@astrojs/react": "^3.6.0",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/vercel": "^7.7.2",
    "@fontsource/fira-code": "^5.0.18",
    "@fontsource/fira-sans": "^5.0.20",
    "@headlessui/react": "^2.1.1",
    "@iconify-json/bi": "^1.1.23",
    "@iconify-json/heroicons": "^1.1.21",
    "@tailwindcss/typography": "^0.5.13",
    "@vercel/analytics": "^1.1.3",
    "@vercel/og": "^0.6.2",
    "@vercel/speed-insights": "^1.0.12",
    "astro": "^4.11.3",
    "astro-icon": "^1.1.0",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "exif": "^0.6.0",
    "exiftool-vendored": "^24.4.0",
    "glob": "^10.4.2",
    "globals": "^15.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.33.2",
    "sharp-ico": "^0.1.5",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/eslint__js": "^8.42.3",
    "@types/exif": "^0.6.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.2",
    "prettier": "^3.3.2",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0"
  }
}
