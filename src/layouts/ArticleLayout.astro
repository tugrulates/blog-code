---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Article from "@/components/Article.astro";

interface Props {
  tab: string;
  title: string;
  description: string;
  date?: Date;
  keywords?: string[];
  ogImage?: ImageMetadata;
}

const {
  tab,
  title,
  description,
  date,
  keywords,
  ogImage: ogImageSquare,
} = Astro.props;
---

<BaseLayout
  tab={tab}
  title={title}
  description={description}
  keywords={keywords}
  date={date}
  ogImage={ogImageSquare}
>
  <div class="flex flex-col gap-12 lg:gap-24">
    <slot name="cover" />
    <Article title={title} date={date}>
      <slot name="content" />
      <slot name="license" />
    </Article>
  </div>
</BaseLayout>
