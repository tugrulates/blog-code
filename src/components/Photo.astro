---
import { Image } from "astro:assets";

const { link, image, description } = Astro.props;
---

<a
  href={link}
  class="align-center w-32 group gap-2 flex flex-col ring-inset ring-stone-500/50 transition hover:bg-stone-500/10 hover:ring-1 sm:rounded-xl",
>
  <div class="hidden grow-0 overflow-hidden rounded-2xl shadow shadow-stone-900 transition-all group-hover:scale-[1.15] sm:flex">
    <Image
      src={image}
      alt={description}
      width={128}
      densities={[1, 2, 3, 4]}
      class="transform-all w-full object-cover"
    />
  </div>
</a>
