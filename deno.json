{
  "nodeModulesDir": "auto",
  "tasks": {
    "astro": "ASTRO_TELEMETRY_DISABLED=1 deno -A npm:astro",
    "clean": "rm -rf dist .astro .vercel content/photos/*/*.json public/files 2> /dev/null",
    "fetch:blog": "git submodule update --init --remote content/blog",
    "fetch:photos": "git submodule update --init --remote content/photos",
    "build:files": {
      "dependencies": ["fetch:blog"],
      "command": "cp -R content/blog/files/* public/files"
    },
    "build:photos": {
      "dependencies": ["fetch:photos"],
      "command": "deno run -A src/scripts/build-photos.ts"
    },
    "build": {
      "dependencies": ["build:files", "build:photos"],
      "command": "astro build"
    },
    "dev": "astro dev",
    "deploy": "~/.deno/bin/deployctl deploy --project=tugrulates-www jsr:@std/http/file-server"
  },
  "imports": {
    "~/": "./src/",
    "astro": "npm:astro",
    "events": "node:events",
    "fs": "node:fs",
    "os": "node:os",
    "path": "node:path",
    "stream": "node:stream",
    "util": "node:util"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
