---
import { Image } from "astro:assets";

const { image, className } = Astro.props;
---

<Image
  slot="cover"
  src={image.data.cover}
  alt={image.data.description}
  width={720}
  densities={[1, 2, 3, 4]}
  class:list={[
    "aspect-2 z-10 shadow shadow-stone-900 sm:rounded-2xl",
    className,
  ]}
/>
