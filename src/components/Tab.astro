---
const { href, alt, selected, className } = Astro.props;
---

<a
  aria-label={alt}
  href={href}
  class:list={[
    "group z-10 h-full bg-stone-300 shadow shadow-stone-900/20 ring-inset ring-stone-500/50 hover:ring-1 sm:rounded-t-3xl dark:bg-stone-700",
    className,
  ]}
  transition:persist
  transition:name={`tab-${href}-${selected ? "selected" : "unselected"}}`}
  transition:animate="none"
>
  <div
    class:list={[
      "-mb-10 h-full px-4 pb-16 pt-2 sm:rounded-t-3xl",
      selected
        ? "bg-stone-200 dark:bg-stone-800"
        : "bg-stone-200/50 dark:bg-stone-800/50",
    ]}
  >
    <div
      class="sm:justify-begin flex h-8 w-fit flex-row items-center gap-1 text-sm font-thin group-hover:scale-110 max-sm:mx-auto"
    >
      <slot />
    </div>
  </div>
</a>
