---
import Icon from "@components/Icon.astro";

const { href, alt, icon, selected, className } = Astro.props;
---

<a
  aria-label={alt}
  href={href}
  class:list={[
    "transition-ring transition-color group rounded-t-3xl bg-stone-200 p-2 ring-inset ring-stone-500/50 transition hover:ring-1 dark:bg-stone-800",
    selected
      ? "z-100 bg-stone-200 shadow-stone-900/20 dark:bg-stone-800"
      : "-z-100 bg-stone-100/20 hover:bg-stone-200/50 dark:bg-stone-900/20 hover:dark:bg-stone-800/50",
    className,
  ]}
>
  <div
    class="flex h-full flex-row items-center justify-center gap-2 pb-4 text-sm font-thin"
  >
    <slot />
  </div>
</a>
