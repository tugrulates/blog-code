---
interface Props {
  tab: string;
  href: string;
  text: string;
}
const { tab, text, href } = Astro.props;
---

<a
  href={href}
  id=`tab-${tab}`
  class="tab group relative z-10 -mb-4 flex h-fit grow flex-col
  overflow-hidden pb-4 shadow-lg shadow-stone-900/20 ring-inset
  ring-stone-500/50 hover:ring-1 sm:rounded-t-3xl"
>
  <div
    class="sm:justify-begin flex h-12 w-fit flex-row items-center gap-1 px-4 text-sm font-thin max-sm:mx-auto"
  >
    <slot />
    <span class="hidden sm:inline">{text}</span>
  </div>
</a>

<style>
  .tab {
    @apply bg-stone-400;
  }
  :global(.dark) .tab {
    @apply bg-stone-600;
  }
  :global([data-tab="posts"]) #tab-posts,
  :global([data-tab="photos"]) #tab-photos,
  :global([data-tab="about"]) #tab-about {
    @apply bg-stone-200;
  }
  :global(.dark) :global([data-tab="posts"]) #tab-posts,
  :global(.dark) :global([data-tab="photos"]) #tab-photos,
  :global(.dark) :global([data-tab="about"]) #tab-about {
    @apply bg-stone-800;
  }
</style>
