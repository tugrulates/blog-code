{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true
  },
  "lib": ["ESNext"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
