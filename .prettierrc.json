{
  "overrides": [
    {
      "files": [".*", "*.json", "*.md", "*.toml", "*.yml"],
      "options": {
        "useTabs": false
      }
    },
    {
      "files": ["**/*.astro"],
      "options": {
        "parser": "astro"
      }
    }
  ],
  "plugins": [
    "@prettier/plugin-xml",
    "prettier-plugin-astro",
    "prettier-plugin-tailwindcss"
  ]
}
