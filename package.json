{
  "name": "blog-code",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "directories": {
    "doc": "docs"
  },
  "config": {
    "posts": "docs/posts/*.md",
    "photos": "docs/photos/*",
    "files": "docs/files/*",
    "favicon": "static/avatar/me.png",
    "clean": "public content/[!_]* static/[!avatar,icons,scripts]* templates/favicon.html"
  },
  "scripts": {
    "lint": "npx eslint scripts",
    "prebuild": "concurrently 'npm:build:posts $npm_package_config_posts' 'npm:build:photos $npm_package_config_photos' 'npm:build:files $npm_package_config_files' 'npm:build:favicon $npm_package_config_favicon'",
    "build": "npm run netlify -- build --offline",
    "build:posts": "ts-node scripts/posts.ts --output=content",
    "build:photos": "concurrently -P 'ts-node scripts/photos.ts --ext=.jpg --output=static/photos {@}' 'ts-node scripts/photos.ts --ext=.webp --output=static/photos {@}' --",
    "build:files": "cp -R -t static",
    "build:favicon": "ts-node scripts/favicon.ts --html=templates/favicon.html --output=static",
    "watch": "concurrently npm:watch",
    "watch:posts": "onchange -f add -f change \"$npm_package_config_posts\" -- npm run build:posts {{file}}",
    "watch:photos": "onchange -f add -f change \"$npm_package_config_photos\" -- npm run build:photos {{file}}",
    "watch:files": "onchange -f add -f change \"$npm_package_config_files\" -- npm run build:files {{file}}",
    "watch:favicon": "onchange -f add -f change \"$npm_package_config_favicon\" -- npm run build:favicon {{file}}",
    "dev": "concurrently npm:watch:* 'npm run netlify -- dev'",
    "test": "npm run netlify -- build --offline --context test",
    "lighthouse": "run-s -s \"netlify -s -- build --context=lighthouse-{1}\" --",
    "lighthouse:parse": "awk 'BEGIN{printf \"console.log(JSON.stringify({ audits: [\"} /^{/{f=1} /^}/{f=0;print;printf \",\"} END{printf \"]}));\"} f' | node | jq",
    "deploy": "npm run netlify -- deploy --offline",
    "clean": "rm -Rf $npm_package_config_clean",
    "netlify": "netlify --telemetry-disable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tugrulates/blog-code.git"
  },
  "author": "Tugrul Ates",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tugrulates/blog-code/issues"
  },
  "homepage": "https://github.com/tugrulates/blog-code#readme",
  "devDependencies": {
    "@types/gm": "^1.18.12",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "favicons": "^7.0.2",
    "gm": "^1.25.0",
    "gray-matter": "^4.0.3",
    "html-validate": "^7.7.1",
    "netlify-plugin-checklinks": "^4.1.1",
    "netlify-plugin-chromium": "^1.1.4",
    "netlify-plugin-html-validate": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "util": "^0.12.5",
    "yargs": "^17.6.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "standard-with-typescript",
      "prettier"
    ],
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "tsconfig.json"
      ]
    },
    "rules": {}
  },
  "dependencies": {
    "chromium": "^3.0.3"
  }
}
