---
import Icon from "@components/Icon.astro";

const { href, alt, icon, newTab, className } = Astro.props;
const external = newTab || href.startsWith("http");
---

<a
  aria-label={alt}
  href={href}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  class:list={[
    "group rounded-xl p-2 ring-inset ring-stone-500/50 transition hover:bg-stone-500/10 hover:ring-1",
    className,
  ]}
>
  <div class="flex h-full flex-col items-center justify-center">
    <Icon src={icon} alt={alt} class="group-hover:scale-100" />
  </div>
</a>
